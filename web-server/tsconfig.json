{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "newLine": "lf",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitOverride": false,
    "skipLibCheck": true,
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist/src",
    "baseUrl": "./",
    "rootDir": "./src",
    "paths": {
      "~business-logic": ["./src/business-logic/index.ts"],
      "~client-types": ["../types/web-client/index.d.ts"],
      "~server-types": ["../types/web-server/index.d.ts"],
      "~packages": ["./src/packages.ts"],
    }
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "dist"],
}
